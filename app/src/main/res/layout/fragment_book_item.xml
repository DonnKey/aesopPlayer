<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:weightSum="7"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:baselineAligned="false"
            android:layout_weight="2"
            >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/settingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:contentDescription="@string/settings_title"
                    app:srcCompat="@drawable/ic_settings_black_24dp"
                    >

                </ImageView>

            </FrameLayout>

            <LinearLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/copyBooksInstruction"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="top|center_horizontal"
                    android:textSize="@dimen/copyBooksInstructionTextSize"
                    android:visibility="invisible"
                    tools:text="Copy Books Instruction" />

                <TextView
                    android:id="@+id/currentPosition"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    app:autoSizeTextType="uniform"
                    tools:text="00:13:10 12%" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/settingsButton2box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/settingsButton2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:contentDescription="@string/settings_title_2"
                    app:srcCompat="@drawable/ic_settings_black_24dp">
                </ImageView>

            </FrameLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_weight="10"
            android:id="@+id/startBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:gravity="bottom|center_horizontal"
            >

            <!-- No text in button, overlaid with blinking text below -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/startButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:theme="@style/buttonStartOverlay" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="16">

                <TextView
                    android:id="@+id/chapterInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:autoSizeMaxTextSize="14sp"
                    app:autoSizeTextType="uniform"
                    tools:text="Chapter Info" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:singleLine="false"
                    android:textAlignment="center"
                    android:textSize="@dimen/bookListTextSize"
                    android:visibility="visible"
                    tools:text="Book Title" />

                <ViewFlipper
                    android:id="@+id/flipper"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:flipInterval="1000"
                    tools:padding="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center"
                        android:text="@string/button_start"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </ViewFlipper>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/totalLength"
                        android:gravity="left"
                        android:textColor="#000000"
                        app:autoSizeTextType="uniform"
                        android:layout_weight="1"
                        tools:text="1:23:45"
                        tools:ignore="NestedWeights,RtlHardcoded" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/completed"
                        android:gravity="end"
                        android:textColor="#000000"
                        app:autoSizeTextType="uniform"
                        android:layout_weight="1"
                        tools:text="Completed" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


    <!-- last is on top, so don't move this -->
    <include layout="@layout/snooze_overlay"/>

</RelativeLayout>